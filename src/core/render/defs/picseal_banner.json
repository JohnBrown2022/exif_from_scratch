{
  "id": "picseal_banner",
  "name": "Picseal 横幅",
  "description": "底部横幅（两列 + 竖分隔线 + 右侧品牌标记）。",
  "scaleModel": { "designWidth": 1000, "min": 0.75, "max": 1.15, "basis": "width" },
  "layout": {
    "kind": "photo_plus_footer",
    "footerHeight": { "designPx": 86, "minPx": 70, "maxPx": 120 },
    "photoDrawMode": "contain"
  },
  "zones": {
    "footer": {
      "grid": { "cols": 12, "rows": 12, "padding": { "designPx": 20, "minPx": 14, "maxPx": 28 } }
    }
  },
  "requirements": { "makerLogo": true },
  "elements": [
    {
      "id": "footer_bg",
      "type": "rect",
      "zone": "footer",
      "style": { "fill": "rgba(255,255,255,0.98)" }
    },
    {
      "id": "footer_topline",
      "type": "divider",
      "zone": "footer",
      "orientation": "horizontal",
      "position": "top",
      "style": { "color": "rgba(0,0,0,0.06)", "thickness": 1 }
    },
    {
      "id": "footer_split",
      "type": "divider",
      "zone": "footer",
      "orientation": "vertical",
      "position": "center",
      "style": { "color": "rgba(0,0,0,0.12)", "thickness": 2 }
    },
    {
      "id": "left_stack",
      "type": "stack",
      "zone": "footer",
      "grid": { "col": 1, "colSpan": 6, "row": 1, "rowSpan": 12 },
      "direction": "vertical",
      "gap": { "designPx": 6, "minPx": 4, "maxPx": 10 },
      "align": "left",
      "vAlign": "top",
      "children": [
        {
          "id": "camera",
          "label": "相机",
          "type": "text",
          "zone": "footer",
          "bind": { "kind": "cameraName", "fallback": "相机" },
          "editable": { "visible": true },
          "style": {
            "font": "sans",
            "weight": 800,
            "size": { "designPx": 18, "minPx": 14, "maxPx": 22 },
            "color": "rgba(0,0,0,0.86)",
            "align": "left",
            "vAlign": "top"
          }
        },
        {
          "id": "date",
          "label": "日期",
          "type": "text",
          "zone": "footer",
          "bind": { "kind": "dateTime" },
          "condition": { "hideWhenEmpty": true },
          "editable": { "visible": true },
          "style": {
            "font": "sans",
            "weight": 650,
            "size": { "designPx": 12, "minPx": 10, "maxPx": 15 },
            "color": "rgba(0,0,0,0.42)",
            "align": "left",
            "vAlign": "top"
          }
        }
      ]
    },
    {
      "id": "right_stack",
      "type": "stack",
      "zone": "footer",
      "grid": { "col": 7, "colSpan": 4, "row": 1, "rowSpan": 12 },
      "direction": "vertical",
      "gap": { "designPx": 6, "minPx": 4, "maxPx": 10 },
      "align": "left",
      "vAlign": "top",
      "children": [
        {
          "id": "lens",
          "label": "镜头",
          "type": "text",
          "zone": "footer",
          "bind": { "kind": "lensName", "fallback": "镜头" },
          "editable": { "visible": true },
          "style": {
            "font": "sans",
            "weight": 800,
            "size": { "designPx": 18, "minPx": 14, "maxPx": 22 },
            "color": "rgba(0,0,0,0.86)",
            "align": "left",
            "vAlign": "top"
          }
        },
        {
          "id": "settings",
          "label": "参数",
          "type": "text",
          "zone": "footer",
          "bind": { "kind": "settings", "joinWith": " · ", "fallback": "—" },
          "editable": { "visible": true },
          "style": {
            "font": "sans",
            "weight": 650,
            "size": { "designPx": 12, "minPx": 10, "maxPx": 15 },
            "color": "rgba(0,0,0,0.42)",
            "align": "left",
            "vAlign": "top"
          }
        }
      ]
    },
    {
      "id": "maker_logo",
      "label": "厂商 Logo",
      "type": "maker_logo",
      "zone": "footer",
      "grid": { "col": 11, "colSpan": 2, "row": 1, "rowSpan": 12 },
      "condition": { "showWhenMakerLogoPresent": true },
      "editable": { "visible": true, "logoStyle": true, "monoColor": true },
      "style": {
        "style": "color",
        "opacity": 0.92,
        "align": "right",
        "vAlign": "middle",
        "maxWidth": { "designPx": 200, "minPx": 120, "maxPx": 260 },
        "maxHeight": { "designPx": 56, "minPx": 30, "maxPx": 90 }
      }
    },
    {
      "id": "maker_text",
      "label": "厂商文字",
      "type": "text",
      "zone": "footer",
      "grid": { "col": 11, "colSpan": 2, "row": 1, "rowSpan": 12 },
      "condition": { "showWhenMakerLogoMissing": true },
      "bind": { "kind": "makeUpper", "fallback": "EXIF" },
      "editable": { "visible": true },
      "style": {
        "font": "sans",
        "weight": 900,
        "size": { "designPx": 22, "minPx": 18, "maxPx": 28 },
        "color": "rgba(0,0,0,0.52)",
        "align": "right",
        "vAlign": "middle"
      }
    }
  ]
}

