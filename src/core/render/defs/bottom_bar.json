{
  "id": "bottom_bar",
  "name": "底部黑条",
  "description": "信息集中展示，适合大多数照片。",
  "scaleModel": { "designWidth": 1000, "min": 0.75, "max": 1.15, "basis": "minEdge" },
  "layout": { "kind": "photo_only", "photoDrawMode": "contain" },
  "zones": {
    "bar": {
      "rect": {
        "of": "photo",
        "inset": {
          "left": 0,
          "right": 0,
          "bottom": 0,
          "height": { "designPx": 140, "minPx": 88, "maxPx": 220 }
        }
      },
      "grid": { "cols": 12, "rows": 12, "padding": { "designPx": 25, "minPx": 14, "maxPx": 40 } }
    }
  },
  "elements": [
    {
      "id": "bar_bg",
      "type": "rect",
      "zone": "bar",
      "style": { "fill": "rgba(0,0,0,0.55)" }
    },
    {
      "id": "lines",
      "type": "stack",
      "zone": "bar",
      "grid": { "col": 1, "colSpan": 12, "row": 1, "rowSpan": 12 },
      "direction": "vertical",
      "gap": { "designPx": 10, "minPx": 6, "maxPx": 14 },
      "align": "left",
      "vAlign": "top",
      "children": [
        {
          "id": "camera",
          "label": "相机",
          "type": "text",
          "zone": "bar",
          "bind": { "kind": "cameraName", "fallback": "无 EXIF" },
          "editable": { "visible": true },
          "style": {
            "font": "sans",
            "weight": 650,
            "size": { "designPx": 32, "minPx": 14, "maxPx": 34 },
            "color": "rgba(255,255,255,0.94)",
            "align": "left",
            "vAlign": "top"
          }
        },
        {
          "id": "secondary",
          "label": "镜头/参数",
          "type": "text",
          "zone": "bar",
          "bind": {
            "kind": "concat",
            "parts": [{ "kind": "lensName" }, { "kind": "settings" }],
            "joinWith": " · "
          },
          "condition": { "hideWhenEmpty": true },
          "editable": { "visible": true },
          "style": {
            "font": "sans",
            "weight": 500,
            "size": { "designPx": 28, "minPx": 12, "maxPx": 30 },
            "color": "rgba(255,255,255,0.94)",
            "align": "left",
            "vAlign": "top"
          }
        },
        {
          "id": "date",
          "label": "日期",
          "type": "text",
          "zone": "bar",
          "bind": { "kind": "dateTime" },
          "condition": { "hideWhenEmpty": true },
          "editable": { "visible": true },
          "style": {
            "font": "sans",
            "weight": 500,
            "size": { "designPx": 26, "minPx": 12, "maxPx": 28 },
            "color": "rgba(255,255,255,0.94)",
            "align": "left",
            "vAlign": "top"
          }
        }
      ]
    }
  ]
}

