{
  "id": "customed",
  "name": "自定义（Customed）",
  "description": "用于自由调整布局的模板（支持 Level 1/2 编辑）。",
  "scaleModel": {
    "designWidth": 1200,
    "min": 0.75,
    "max": 1.1,
    "basis": "width"
  },
  "layout": {
    "kind": "photo_plus_footer",
    "footerHeight": {
      "designPx": 60
    },
    "photoDrawMode": "contain"
  },
  "zones": {
    "footer": {
      "grid": {
        "cols": 12,
        "rows": 12,
        "padding": {
          "designPx": 12,
          "minPx": 10,
          "maxPx": 22
        }
      }
    }
  },
  "requirements": {
    "makerLogo": true
  },
  "elements": [
    {
      "id": "footer_bg",
      "type": "rect",
      "zone": "footer",
      "style": {
        "fill": "rgba(255,255,255,0.98)"
      }
    },
    {
      "id": "footer_topline",
      "type": "divider",
      "zone": "footer",
      "orientation": "horizontal",
      "position": "top",
      "style": {
        "color": "rgba(0,0,0,0.06)",
        "thickness": 1
      }
    },
    {
      "id": "camera",
      "label": "相机",
      "type": "text",
      "zone": "footer",
      "grid": {
        "col": 1,
        "colSpan": 5,
        "row": 2,
        "rowSpan": 6
      },
      "bind": {
        "kind": "cameraName",
        "fallback": "相机"
      },
      "style": {
        "font": "sans",
        "weight": 750,
        "size": {
          "designPx": 20,
          "minPx": 14,
          "maxPx": 22
        },
        "color": "rgba(20,20,22,0.92)",
        "align": "left",
        "vAlign": "top"
      }
    },
    {
      "id": "lens",
      "label": "镜头",
      "type": "text",
      "zone": "footer",
      "grid": {
        "col": 1,
        "colSpan": 5,
        "row": 9,
        "rowSpan": 3
      },
      "bind": {
        "kind": "lensName"
      },
      "condition": {
        "hideWhenEmpty": true
      },
      "style": {
        "font": "sans",
        "weight": 650,
        "size": {
          "designPx": 13,
          "minPx": 10,
          "maxPx": 16
        },
        "color": "rgba(60,60,66,0.62)",
        "align": "left",
        "vAlign": "top"
      }
    },
    {
      "id": "settings",
      "label": "参数",
      "type": "text",
      "zone": "footer",
      "grid": {
        "col": 8,
        "colSpan": 5,
        "row": 1,
        "rowSpan": 12
      },
      "bind": {
        "kind": "settings",
        "joinWith": " | ",
        "fallback": "—"
      },
      "style": {
        "font": "sans",
        "weight": 700,
        "size": {
          "designPx": 14,
          "minPx": 11,
          "maxPx": 16
        },
        "color": "rgba(20,20,22,0.9)",
        "align": "right",
        "vAlign": "middle"
      }
    },
    {
      "id": "maker_logo",
      "label": "厂商 Logo",
      "type": "maker_logo",
      "zone": "footer",
      "grid": {
        "col": 6,
        "colSpan": 2,
        "row": 1,
        "rowSpan": 12
      },
      "condition": {
        "showWhenMakerLogoPresent": true
      },
      "style": {
        "style": "color",
        "opacity": 0.55,
        "align": "center",
        "vAlign": "middle",
        "maxWidth": {
          "designPx": 216
        },
        "maxHeight": {
          "designPx": 22
        }
      }
    },
    {
      "id": "maker_text",
      "label": "厂商文字",
      "type": "text",
      "zone": "footer",
      "grid": {
        "col": 6,
        "colSpan": 2,
        "row": 1,
        "rowSpan": 12
      },
      "condition": {
        "showWhenMakerLogoMissing": true
      },
      "bind": {
        "kind": "makeUpper",
        "fallback": "EXIF"
      },
      "style": {
        "font": "sans",
        "weight": 700,
        "size": {
          "designPx": 12,
          "minPx": 10,
          "maxPx": 14
        },
        "color": "rgba(20,20,22,0.46)",
        "align": "center",
        "vAlign": "middle"
      }
    }
  ]
}